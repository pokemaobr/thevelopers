                    <div class="portfolio-wrap">
                        <img src="{{ episodio.thumb }}" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>{{ episodio.Entrevistado }}</h4>
                            <p>{{ episodio.Descricao }}</p>
                            <div class="portfolio-links">
                                <a href="{{ episodio.Link }}" data-gallery="portfolioGallery" class="portfolio-lightbox" title="{{ episodio.Entrevistado }} - {{ episodio.Descricao }}"><i class="bx bx-video-plus"></i></a>
                                <a href="{{ episodio.Link }}" title="Assistir no youtube" target="_blank"><i class="bx bxl-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

